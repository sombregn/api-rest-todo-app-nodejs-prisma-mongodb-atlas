generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TodoListStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TodoItemStatus {
  COMPLETED
  NOT_COMPLETED
}

model TodoList {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  status    TodoListStatus @default(TODO)
  items     TodoItem[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@map("todolists")
}

model TodoItem {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  label      String
  status     TodoItemStatus @default(NOT_COMPLETED)
  todoListId String         @db.ObjectId
  todoList   TodoList       @relation(fields: [todoListId], references: [id], onDelete: Cascade)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@map("todoitems")
}